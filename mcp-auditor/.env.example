# --- Networking ---
# Per-request timeout (ms)
BEVSTACK_AUDITOR_TIMEOUT_MS=12000
# User-Agent for fetch
BEVSTACK_AUDITOR_UA="BevstackAuditor/1.0 (+https://bevstack.io)"
# Max HTML bytes per fetch
BEVSTACK_AUDITOR_MAX_HTML_BYTES=2000000

# --- Thresholds (0–100) ---
# Hard threshold for Privacy/Terms
BEVSTACK_AUDITOR_PASS_THRESHOLD=80
# Softer threshold for FAQ
BEVSTACK_AUDITOR_FAQ_SOFT_PASS=60

# --- Spellcheck ---
# Enable/disable spellcheck (true/false)
BEVSTACK_AUDITOR_ENABLE_SPELLCHECK=true
# Extra whitelist terms (comma-separated)
# e.g., "bevstack,shopify,sku,añejo"
BEVSTACK_AUDITOR_SPELL_WHITELIST_APPEND=""

# --- Discovery heuristics (optional JSON overrides) ---
# Customize candidate tails per type
# Example:
# BEVSTACK_AUDITOR_TAILS_JSON='{"privacy":["privacy","privacy-policy"],"terms":["terms","terms-of-service"],"faq":["faq","support"]}'
BEVSTACK_AUDITOR_TAILS_JSON=""
# Customize required sections per type
# Example:
# BEVSTACK_AUDITOR_REQUIRED_SECTIONS_JSON='{"privacy":["personal information","cookies","contact"]}'
BEVSTACK_AUDITOR_REQUIRED_SECTIONS_JSON=""